<UserControl x:Class="HRIS.ExampleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <!-- Part of an extension exercise.
            Note the binding of the ItemsSource to genderValues (which obtains its values from the Enum type Gender).
            Setting the SelectedIndex here is necessary for a value to be selected/shown on start up. -->
        <ComboBox HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Width="133"
                  ItemsSource="{Binding Source={StaticResource genderValues}}"
                   />
        <Label Content="This is the User Control" HorizontalAlignment="Left" Margin="10,1,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
